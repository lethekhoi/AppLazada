<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:background="@color/colorGray"
    android:gravity="center">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress_bar_TopDienTu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgHinhDienThoaiMayTinhBang"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/backgroundplashscreen" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtTieuDeTopDienThoaiDienTu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Tên Sản Phẩm"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtGiaDienTu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:text="Giá tiền"
                    android:textAlignment="center"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/txtGiamGiaDienTu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

    </FrameLayout>


</androidx.cardview.widget.CardView>